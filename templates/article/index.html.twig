{% extends 'base.html.twig' %}

{% block title %}Elenco dei post{% endblock %}

{% block body %}
<!-- header -->
    <header class="masthead" style="background-image: url('../img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">A Blog Theme by Start Bootstrap</span>
          </div>
        </div>
      </div>
    </div>
  </header>
  <!--fine header -->
  <!-- Post -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
      {% for post in posts %}
        <div class="post-preview">
          <a href="{{path('post.show',{'id':post.id})}}">
            <h2 class="post-title">
              {{post.title}}
            </h2>
            <h3 class="post-subtitle">
             {{ post.body|raw|striptags|slice(0, 200) }}...
            </h3>
          </a>
          <p class="post-meta">
           Scritto il {{ post.updatedAt|date("m/d/Y") }} da <a href="#">  {{post.user.nickname}}</a>
          </p>
        </div> 
        <hr>
       {% endfor %}
       
      
        <!-- Pager 
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
        -->
      </div>
    </div>
  </div>
{% endblock %}
